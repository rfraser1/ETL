@model List<AnnualSummary>
@using ETL.DBModels

@{
    ViewData["Title"] = "Results Page";
}

<div class="text-center">
    <h1 class="display-4">Results</h1>
    <p>ETL Demo for JBA Consulting</p>
</div>

<div class="col-4 offset-4">
    <form method="post" action="/Home/DeleteData" enctype="multipart/form-data">
        <div class="m-3">
            <label>To clear the data uploaded for this session, press dete.</label>
        </div>
        <div class="m-3">
            <button type="submit" class="btn btn-primary">Delete</button>
        </div>
    </form>
    <p>As a check that the data uploaded properly, this table should show that the total number of data points loaded against each year is the same.</p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Record Year</th>
                <th>Data Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AnnualSummary annualSummary in Model)
            {
                <tr>
                    <td>@annualSummary.RecordYear</td>
                    <td>@annualSummary.DataCount</td>
                </tr>
            }
        </tbody>

    </table>
</div>
